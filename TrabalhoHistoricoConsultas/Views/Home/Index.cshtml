@model TrabalhoHistoricoConsultas.Models.Usuario
@{
    ViewBag.Title = "Histórico de Consultas Online";
}
<div class="form-horizontal">
    <h1> Histórico de Consultas Online</h1>
    <hr />
    <div class="form-horizontal" ,style="text-align:right">
        @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align:right" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login" } })
        </div>
    </div>
    <div class="form-group" , style="text-align:right">
        @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-1", @style = "text-align:right" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Senha" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Entrar" class="btn btn-default" />
        </div>
    </div>
    @Html.ActionLink("Criar Conta", "Cadastrar","Usuario")
</div>




